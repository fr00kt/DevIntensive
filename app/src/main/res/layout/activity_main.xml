<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/status_bar"
            android:background="@color/gray"
            android:weightSum="4">
            <LinearLayout
                style="@style/main_layout_status_bar"
                android:layout_weight="1">
                <TextView
                    style="@style/status_bar_text.value"
                    android:text="@string/rating_value"/>
                <TextView
                    style="@style/status_bar_text"
                    android:text="@string/rating_text"/>
            </LinearLayout>

            <View style="@style/view_line.vertical"/>

            <LinearLayout
                style="@style/main_layout_status_bar"
                android:layout_weight="2">

                <TextView
                    style="@style/status_bar_text.value"
                    android:text="@string/code_lines_value"/>

                <TextView
                    style="@style/status_bar_text"
                    android:text="@string/code_lines__text"/>
            </LinearLayout>

            <View style="@style/view_line.vertical"/>

            <LinearLayout
                style="@style/main_layout_status_bar"
                android:layout_weight="1">

                <TextView
                    style="@style/status_bar_text.value"
                    android:text="@string/projects_value"/>

                <TextView
                    style="@style/status_bar_text"
                    android:text="@string/projects_text"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/info_layout">
            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"/>

            <LinearLayout
                style="@style/info_layout_inside">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_et"
                        style="@style/info_text"
                        android:hint="@string/hint_phone"
                        android:inputType="phone"
                        android:text="@string/text_phone"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>

        </LinearLayout>

        <View style="@style/view_line.horizontal"/>

        <LinearLayout
            style="@style/info_layout">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_mail_black_24dp"/>

            <LinearLayout
                style="@style/info_layout_inside">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/info_text"
                        android:hint="@string/hint_mail"
                        android:text="@string/text_mail"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"/>

        </LinearLayout>

        <View style="@style/view_line.horizontal"/>

        <LinearLayout
            style="@style/info_layout">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_vk_circle_24dp"/>

            <LinearLayout
                style="@style/info_layout_inside">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/vk_et"
                        style="@style/info_text"
                        android:hint="@string/hint_vk"
                        android:text="@string/text_vk"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"/>

        </LinearLayout>

        <View style="@style/view_line.horizontal"/>

        <LinearLayout
            style="@style/info_layout">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_github_circle_24dp"/>

            <LinearLayout
                style="@style/info_layout_inside">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/git_et"
                        style="@style/info_text"
                        android:hint="@string/hint_git"
                        android:text="@string/text_git"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_remove_red_eye_black_24dp"/>

        </LinearLayout>

        <View style="@style/view_line.horizontal"/>

        <LinearLayout
            style="@style/info_layout">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                style="@style/info_layout_inside">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/about_me_et"
                        style="@style/info_text"
                        android:hint="@string/hint_about_me"
                        android:text="@string/text_about_me"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

